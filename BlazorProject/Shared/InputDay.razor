@using BlazorProject.Data
@inject TimetableService TimetableService
<div class="container-fluid"
    <div>
        <select @bind="@day" @onclick="@(() => OnClickCallback.InvokeAsync(day))">
            <option selected="selected">  </option>
            @foreach (var i in TimetableService.GetDay().ToList())
            {
                <option>@i</option>
            }
        </select>
        @*<button @onclick="@(() => OnClickCallback.InvokeAsync(day))">Get</button>*@
    </div>
</div>

@code {
    private string day;

    [Parameter]
    public EventCallback<string> OnClickCallback { get; set; }
}

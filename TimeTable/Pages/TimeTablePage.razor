@page "/timetable"

@using TimeTable.Shared

<h3>TimeTablePage</h3>

<select id="selectDay" @bind="@selectedDay">
    @foreach (var day in DataAccess.GetDays())
    {
        <option>@day</option>
    }
</select>

<LessonTable Day=@selectedDay/>


@code {
    string selectedDay = "Monday";



    public void AddDay()
    {
        

        DataAccess.SaveTimeTableDay(new TimeTableDay
        {
            DayName = "Thursday",
            Subjects =
            new List<Subject>
            {
                    new Subject {Name = "MDK 01 04", Teacher = "Nacharov" },
                    new Subject {Name = "Geometry", Teacher = "Nacharov" },
                    new Subject {Name = "MDK 01 04", Teacher = "Nacharov" },
                    new Subject {Name = "Mathematic", Teacher = "Nacharov" },
            }

        }
        );
    }
}

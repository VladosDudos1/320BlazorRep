@if (!IsTable) 
{ 
<div class="row text-center alert alert-info">
    <div class="col">
        <p>@Games[0].Name</p>
        <p>@Games[0].Genre</p>
        <p>@Games[0].ReleaseDate</p>
    </div>
</div>
}
else
{
    foreach (var item in Games)
    {
<tr>
    <td>@item.Name</td>
    <td>@item.Genre</td>
    <td>@item.ReleaseDate</td>
</tr>
    }
}

@code {
    [Parameter] public List<Game> Games { get; set; }
    [Parameter] public bool IsTable { get; set; }
}
